{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "target": "ES2020",
      "moduleResolution": "node",
      "module": "CommonJS",
      "outDir": "./dist",
      "rootDir": "./src/entrypoints/lambda",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "declaration": true,
      "sourceMap": true
    },
    "include": ["src/entrypoints/lambda/**/*.ts"],
    "exclude": ["node_modules", "dist"]
  }
